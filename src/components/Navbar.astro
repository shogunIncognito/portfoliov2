---
import { Icon } from "astro-icon";
const routes = [
  {
    path: "/#home",
    title: "Acerca de mi",
  },
  {
    path: "/#projects",
    title: "Proyectos",
  },
  {
    path: "/#ability",
    title: "Habilidades",
  },
  {
    path: "/certificaciones",
    title: "Certificaciones",
  },
  {
    path: "/cv",
    title: "CV",
  },
];
---

<script>
  const scrollClasses = ["bg-[#1A1515]", "border-b-2", "shadow-lg"];
  const nav = document.querySelector(".header-nav");

  const handleScroll = () => {
    if (nav != null) {
      if (window.scrollY > 60) {
        nav.classList.add(...scrollClasses);
      } else {
        nav.classList.remove(...scrollClasses);
      }
    }
  };

  window.addEventListener("scroll", handleScroll);
</script>

<header
  transition:persist
  class="transition-all header-nav top-0 w-full px-5 py-3 fixed z-20"
>
  <nav
    class="flex w-full md:justify-between relative justify-center items-center p-5"
  >
    <a href="/" class="absolute left-0">
      <Icon name="teenyicons:home-outline" class="w-7" />
    </a>
    <a
      href="/#home"
      class="font-extrabold text-transparent text-2xl md:text-2xl rainbow-text text-black"
      >Samuel Aya
    </a>
    <ul class="md:flex hidden">
      <li>
        {
          routes.map((route) => (
            <a
              class="py-3 cursor-pointer px-4 border-2 border-transparent hover:border-white transition-colors rounded-md"
              href={route.path}
            >
              {route.title}
            </a>
          ))
        }
      </li>
    </ul>
  </nav>
</header>
